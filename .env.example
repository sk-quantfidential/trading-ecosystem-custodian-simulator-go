# Custodian Simulator Go - Environment Configuration
# Copy this to .env and update with your orchestrator credentials

# Service Identity
SERVICE_NAME=custodian-simulator
SERVICE_VERSION=1.0.0
ENVIRONMENT=development

# Network Configuration
HTTP_PORT=8084
GRPC_PORT=9094

# Database Configuration (orchestrator custodian_adapter user)
POSTGRES_URL=postgres://custodian_adapter:custodian-adapter-db-pass@localhost:5432/trading_ecosystem?sslmode=disable

# Redis Configuration (orchestrator custodian-adapter user)
REDIS_URL=redis://custodian-adapter:custodian-pass@localhost:6379/0

# Test Configuration
TEST_POSTGRES_URL=postgres://custodian_adapter:custodian-adapter-db-pass@localhost:5432/trading_ecosystem?sslmode=disable
TEST_REDIS_URL=redis://admin:admin-secure-pass@localhost:6379/0

# Configuration Service (if available)
CONFIG_SERVICE_URL=http://localhost:8090

# Connection Settings
MAX_CONNECTIONS=25
MAX_IDLE_CONNECTIONS=10
CONNECTION_TIMEOUT=30s

# Cache Configuration
CACHE_TTL=5m
CACHE_NAMESPACE=custodian

# Service Discovery
SERVICE_DISCOVERY_NAMESPACE=custodian
HEARTBEAT_INTERVAL=30s

# Request Configuration
REQUEST_TIMEOUT=5s

# Health Check
HEALTH_CHECK_INTERVAL=30s

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
